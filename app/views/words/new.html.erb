<% if user_signed_in? %>

<div>新しい単語を追加<br />

  <%= form_tag('/words', method: :post,) do %>
    <input type="text" name="word" class="new_words" placeholder="単語を入力して下さい(英語)" /><br />
    <input type="text" name="meaning" class="new_words"  placeholder="単語の意味を入力して下さい(日本語）" /><br />
    <input type="text" name="wrong1" class="new_words"  placeholder="不正解の選択肢1を入力して下さい(日本語）" /><br />
     <input type="text" name="wrong2" class="new_words"  placeholder="不正解の選択肢2を入力して下さい(日本語）" />
    <div class="button-box">
      <input type="submit" class="submit-button">
    </div>
  <% end %>

</div>

<% else %>

  <div>新しい単語を追加するには、ログインして下さい</div>

<% end %>
