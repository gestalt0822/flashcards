  
<div class="wall">
現在<%= @total_number %>問中<%= @question_number %>問目<br />
<ul>
  <li>あなた答え・・・<b><%= @answer %></b></li>
<li>正解は・・・<b><%= @word_meaning %></b></li>
<li><span class="result"><%= @result %>です!!!</span></li>
  </ul>
  
<% if @question_number == @total_number %>

  <%= form_tag('/quiz/result', method: :get,) do %>
  <%= hidden_field_tag(:total_number, @total_number) %>
  <%= hidden_field_tag(:question_number, @question_number) %>
  <%= hidden_field_tag(:correct_number, @correct_number) %>
  <%= hidden_field_tag(:incorrect_number, @incorrect_number) %>
  <input type="submit" value="結果を表示">
  <% end %>

<% else %>

  <%= form_tag('/quiz/question', method: :get,) do %>
  <%= hidden_field_tag(:total_number, @total_number) %>
  <%= hidden_field_tag(:question_number, @question_number) %>
  <%= hidden_field_tag(:correct_number, @correct_number) %>
  <%= hidden_field_tag(:incorrect_number, @incorrect_number) %>
  <input type="submit" value="次の問題">
  <% end %>

<% end %>


</div>
